<?php
namespace Redaxscript;

$language = Language::getInstance();
$element = new Html\Element();
$inputElement = $element
	->copy()
	->init('input',
	[
		'class' => $admin ? 'rs-admin-fn-status-tab' : 'rs-fn-status-tab',
		'type' => 'radio',
		'name' => $admin ? 'Modules\Preview\Admin\Tab' : 'Modules\Preview\Tab'
	]);
$labelElement = $element
	->copy()
	->init('label',
	[
		'class' => $admin ? 'rs-admin-fn-toggle-tab rs-admin-label-tab' : 'rs-fn-toggle-tab rs-label-tab'
	]);
$boxElement = $element
	->copy()
	->init('div',
	[
		'class' => $admin ? 'rs-admin-fn-content-tab rs-admin-box-tab' : 'rs-fn-content-tab rs-box-tab'
	]);
?>

<!-- tab -->

<div class="<?php echo $admin ? 'rs-admin-fn-tab rs-component-tab' : 'rs-admin-fn-tab rs-component-tab'; ?>">

	<?php for ($i = 1; $i < 6; $i++): ?>

		<?php echo $inputElement
					->copy()
					->attr('id', $admin ? 'Modules\Preview\Admin\Tab\\' . $i : 'Modules\Preview\Tab\\' . $i)
					->attr('checked', $i === 1 ? 'checked' : null)
					->text($language->get($i, '_number')) .
				$labelElement
					->copy()
					->attr('for', $admin ? 'Modules\Preview\Admin\Tab\\' . $i : 'Modules\Preview\Tab\\' . $i)
					->text($language->get($i, '_number')) .
				$boxElement
					->copy()
					->text($language->get($i, '_number')); ?>

	<?php endfor; ?>

</div>
